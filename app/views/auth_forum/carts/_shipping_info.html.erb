<div class="panel panel-default">
  <div class="checkout-title"> Shipping Information </div>
  <div class="panel-body">
      <div class="col-lg-12 no-padding">
        <div class="col-lg-6 reset-left-padding">
          <div class="form-group">
            <%= f.text_field :first_name, :class => 'form-control', :placeholder => 'First Name' %>
          </div>
        </div>
        <div class="col-lg-6 no-padding">
          <div class="form-group">
            <%= f.text_field :last_name,  :class => 'form-control', :placeholder => 'Last Name' %>
          </div>
        </div>
      </div>
      <div class="col-lg-12 no-padding">
        <div class="form-group">
            <%= f.text_area :s_address,  :class => 'form-control', :placeholder => 'Address' %>
        </div>
        <div class="form-group">
          <%= f.select :s_country, options_for_select(Carmen::Country.all.collect { |c| [c.name, c.code]}), {prompt: 'Country'}, {:class => 'form-control selectpicker'} %>
        </div>
        <div class="form-group">
          <%= f.subregion_select :s_state, 'US', {prompt: 'Select state'}, {:class => 'form-control selectpicker'} %>
        </div>
      </div>
      <div class="col-lg-12 no-padding">
        <div class="col-lg-6 reset-left-padding">
          <div class="form-group">
            <%= f.text_field :s_city, :class => 'form-control', :placeholder => 'City' %>
          </div>
        </div>
        <div class="col-lg-6 no-padding">
          <div class="form-group">
            <%= f.text_field :s_zip, :class => 'form-control', :placeholder => 'Zip' %>
          </div>
        </div>
      </div>
      <!--<div class="actions pull-right">-->
        <!--<%#= submit_tag 'Continue', :class => 'btn btn-default' %>-->
      <!--</div>-->
  </div>
</div>