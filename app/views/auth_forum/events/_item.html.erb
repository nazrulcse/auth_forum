<div class="single_item">
  <h2 class='reset-top-margin'><%= event.name %></h2>
  <% if event.product.image_url.present? %>
      <%= image_tag event.product.image_url(:thumb).to_s %>
  <% end %>
  <h2>$<%= event.product.price %></h2>
  <p><%= link_to event.title, event_path(event) %></p>
  <div class='event-item-actions'>
    <%= link_to product_path(event.product), :class => 'btn btn-default' do %>
        <i class="fa fa-square-o"></i> Product
    <%end%>
    <%= link_to line_items_path(:product_id => event.product.id), :method => :post, :remote => true, :class => "btn btn-default add-to-cart" do %>
     <i class="fa fa-shopping-cart"></i> Add to Cart
    <%end%>
  </div>
</div>