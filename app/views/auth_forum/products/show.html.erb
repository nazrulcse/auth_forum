<p id="notice"><%= notice %></p>
<h1 class="category-title text-center"> <%= @product.category.name %> </h1>
<div class="col-lg-12">
 <div class="col-lg-6">
   <%= image_tag(@product.get_image(:big)) %>
   <div class="product-small-image">
     <%= image_tag(@product.get_image(:thumb)) %>
   </div>
 </div>

 <div class="col-lg-6">
   <div class="text-center">
     <h3>
       <%= @product.title %>
     </h3>
   </div>
   <div class="product-price">
    Price: <%= number_to_currency(@product.price) %>
   </div>
   <div class="product-desc">
    <%= @product.description %>
   </div>
   <div class="add-to-cart-form">
     <%= form_for AuthForum::LineItem.new do |f| %>
         <div class="col-lg-8">
           <%= hidden_field_tag(:product_id, @product.id) %>
           <%= f.number_field :quantity, :class => 'form-control', :min => 1 %>
         </div>
         <div class="col-lg-4">
           <%= f.submit :class => 'btn btn-default', :value => 'Add To Cart' %>
         </div>
     <%end%>
   </div>
 </div>
</div>
