<p id="notice"><%= notice %></p>

<h1 class="title" style="border: none;"> All Products </h1>

<div class="product_items">
  <% @products.each do |product| %>
 <div class="single_item">
   <% if product.image_url.present? %>
       <%= image_tag product.image_url(:thumb).to_s %>
   <% end %>
   <h2>$<%=  product.price  %></h2>
   <p><%= link_to product.title, product_path(product) %></p>
   <%= link_to 'Add to Cart', line_items_path(:product_id => product), :method => :post ,:remote => true, :class=>"btn btn-default add-to-cart" %>
   </div>
      <% end %>
  </div>

<br>

<%= link_to 'New Product', new_product_path %>
