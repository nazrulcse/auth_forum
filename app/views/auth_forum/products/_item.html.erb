<div class="single_item">
  <% if product.image_url.present? %>
      <%= image_tag product.image_url(:thumb).to_s %>
  <% end %>
  <h2>$<%= product.price %></h2>

  <p><%= link_to product.title, product_path(product) %></p>

  <div class='event-item-actions'>
    <% if product.event.present? %>
        <%= link_to event_path(product.event), :class => 'btn btn-default' do %>
            <i class="fa fa-calendar"></i> Event
        <% end %>
    <% end %>
    <%= link_to line_items_path(:product_id => product.id), :method => :post, :remote => true, :class => "btn btn-default add-to-cart" do %>
        <i class="fa fa-shopping-cart"></i> Add to Cart
    <% end %>
  </div>
</div>