<table class="table order-table">
  <thead class="order-title">
  <tr>
    <th> Item </th>
    <th></th>
    <th> Quantity</th>
    <th> Price</th>
    <th> Order Id</th>
    <th> Status</th>
  </tr>
  </thead>
  <tbody>
  <% order.line_items.each do |line_item| %>
      <tr>
        <td class="order-item-image">
          <%= image_tag(line_item.product.get_image(:thumb)) %>
        </td>
        <td>
          <h2> <%= line_item.product.category.name %> </h2>
          <%= link_to line_item.product.title, product_path(line_item.product) %>
        </td>
        <td class="item"> <%= line_item.quantity %> x <%= number_to_currency(line_item.product.price) %> </td>
        <td class="item price"> <%= number_to_currency(line_item.total_price) %> </td>
        <td class="item"> <%= line_item.order_id %> </td>
        <td class="item"> <%= AuthForum::Order::ORDER_STATE.index(line_item.order.status_id) %> </td>
      </tr>
  <% end %>

  </tbody>
</table>