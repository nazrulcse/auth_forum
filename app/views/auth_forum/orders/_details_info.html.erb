<div class="col-lg-12">
  <div class="panel panel-success">
    <div class="panel-heading"> General Information</div>
    <div class="panel-body">
      <div class="col-lg-12 no-padding">
        <div class="col-lg-6">
          Card Holder Name
        </div>
        <div class="col-lg-6">
          <%= order.card_holder_name %>
        </div>

        <div class="col-lg-6">
          Card Number
        </div>
        <div class="col-lg-6">
          <%= order.card_number %>
        </div>

        <div class="col-lg-6">
          Total Item
        </div>
        <div class="col-lg-6">
          <b> <%= order.total_item %> </b>
        </div>

        <div class="col-lg-6">
          Total Price
        </div>
        <div class="col-lg-6">
          <b> <%= number_to_currency(order.order_total) %> </b>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="col-lg-12 no-padding">
  <div class="col-lg-6">
    <div class="col-lg-12 no-padding">
      <div class="panel panel-info">
        <div class="panel-heading"> Shipping Information</div>
        <div class="panel-body">
          <div class="col-lg-12 no-padding">
            <div class="col-lg-6">Address</div>
            <div class="col-lg-6"><%= order.s_address %></div>
            <div class="col-lg-6">City</div>
            <div class="col-lg-6"><%= order.s_city %></div>
            <div class="col-lg-6">State</div>
            <div class="col-lg-6"><%= order.s_state %></div>
            <div class="col-lg-6">Zip</div>
            <div class="col-lg-6"><%= order.s_zip %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="col-lg-12 no-padding">
      <div class="panel panel-info">
        <div class="panel-heading"> Billing Information</div>
        <div class="panel-body">
          <div class="col-lg-12 no-padding">
            <div class="col-lg-6">Address</div>
            <div class="col-lg-6"><%= order.b_address %></div>
            <div class="col-lg-6">City</div>
            <div class="col-lg-6"><%= order.b_city %></div>
            <div class="col-lg-6">State</div>
            <div class="col-lg-6"><%= order.b_state %></div>
            <div class="col-lg-6">Zip</div>
            <div class="col-lg-6"><%= order.b_zip %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-6"></div>
</div>